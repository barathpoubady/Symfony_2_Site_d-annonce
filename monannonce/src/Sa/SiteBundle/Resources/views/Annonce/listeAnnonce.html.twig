                                <td>{{ annonce.created | date("d/m/Y") }}</td>
                                <td>{{ annonce.updated | date("d/m/Y") }}</td>
                                <td><span class="glyphicon glyphicon-ok-circle" aria-hidden="true"></span></td>
                            </tr>
                          {% endif %} 
